    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Client",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test_debug.py",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "justMyCode": false,
            "env": {
                "DEBUG": "true"
            },
            "args": []
        },
        {
            "name": "Python Debugger: Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server/wdb.server.py",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "justMyCode": false,
            "env": {
                "DEBUG": "true"
            },
            "args": []
        }

    ]
}